<% layout('/layouts/boilerplate') %>
<h1>All posts</h1>
<% for (let place of places) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= place.title %> </h5>
                    <p class="card-text">
                        <small class="text-muted"> Location: <%= place.location%></small>
                    </p>
                    <a class="btn btn-success" href="/newAdventures/<%=place._id%>">View <%= place.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
