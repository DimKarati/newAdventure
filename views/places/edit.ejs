<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center"> Edit Adventure</h1>
    <div class="col-6 offset-3">
        <form action="/places/<%=place._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="place[title]" value="<%= place.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Location</label>
                <input class="form-control" type="text" id="location" name="place[location]" value="<%= place.location %>">
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="location" name="place[image]">
            </div> -->
            <div class="mb-3">
                <button class="btn btn-success">Update Adventure</button>
            </div>
            <a href="/newAdventures/<% place._id%>">Back to Adventure</a>
        </form>
    </div>
</div>  